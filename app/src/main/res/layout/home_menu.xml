<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="399dp"
        android:layout_height="71dp"
        android:text="                 Cal Trac"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Own Journey"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="60dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/goals_button"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:background="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_checklist_rtl_24"
        android:onClick="goalsButtonClicked"
        android:text="Dail Goals"
        android:textSize="25dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="141dp" />

    <Button
        android:id="@+id/bmr_button"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:background="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_analytics_24"
        android:onClick="bmrButtonClicked"
        android:text="BMR"
        android:textSize="26dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/intake_button"
        android:layout_width="278dp"
        android:layout_height="54dp"
        android:background="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_food_bank_24"
        android:onClick="intakeButtonClicked"
        android:text="Calorie Intake"
        android:textSize="20dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="326dp" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="278dp"
        android:layout_height="54dp"
        android:background="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_monitor_weight_24"
        android:onClick="updateButtonClicked"
        android:text="Update"
        android:textSize="20dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/workout_button"
        android:layout_width="278dp"
        android:layout_height="54dp"
        android:background="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_emoji_people_24"
        android:onClick="intakeButtonClicked"
        android:text="Workouts"
        android:textSize="20dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="525dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:background="@color/purple_700"
        android:text="@string/Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>